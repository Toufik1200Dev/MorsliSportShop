{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Product_name": {
      "type": "string",
      "required": true
    },
    "Product_desctiption": {
      "type": "text",
      "required": false
    },
    "Product_price": {
      "type": "biginteger",
      "required": true,
      "default": "1000"
    },
    "Product_img": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "Product_category": {
      "type": "enumeration",
      "required": true,
      "default": "all",
      "enum": [
        "all",
        "Football",
        "Sport de Combat",
        "Gym"
      ]
    },
    "Product_sizes": {
      "type": "customField",
      "customField": "plugin::multi-select.multi-select",
      "default": "\n",
      "options": [
        "XS",
        "S",
        "L",
        "XL",
        "XXL",
        "3XL",
        "4XL",
        "5XL",
        "6XL",
        "150cm",
        "155cm",
        "160cm",
        "165cm",
        "170cm",
        "175cm",
        "180cm",
        "185cm",
        "190cm"
      ],
      "min": 2,
      "max": 100
    },
    "Product_color": {
      "type": "customField",
      "customField": "plugin::multi-select.multi-select",
      "default": "[]",
      "options": [
        "Red",
        "Orange",
        "Yellow",
        "Green",
        "Blue",
        "Violet",
        "Black",
        "White",
        "Gray",
        "Brown",
        "Pink"
      ]
    }
  }
}
